<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OscarVendor" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green3</item>
        <item name="colorPrimaryVariant">@color/green3</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="FullScreenAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="background">@drawable/rounded_dialog</item>
    </style>


    <style name="EditTextStyleLogin" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">@dimen/_230sdp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">10</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="MyBottomNavigationView.TextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>


    <style name="RadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorControlNormal">@color/grey</item>
        <item name="colorAccent">@color/green3</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>

    <style name="CheckboxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorControlNormal">@color/grey</item>
        <item name="colorAccent">@color/green3</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>


    <style name="RatingBar" parent="Widget.AppCompat.RatingBar.Indicator">
        <item name="colorControlNormal">@color/grey1</item>
        <item name="colorControlActivated">@color/yellow</item>
    </style>


    <style name="NoMarginsDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>


    <style name="CustomCardCorners" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance_custom_corners</item>
    </style>

    <style name="ShapeAppearance_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/_20sdp</item>
        <item name="cornerSizeTopRight">@dimen/_20sdp</item>
    </style>






</resources>